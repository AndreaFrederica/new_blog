---
import { type CollectionEntry, getEntry, render } from "astro:content";
import GitHubStats from "@components/GitHubStats.vue";
import Markdown from "@components/misc/Markdown.astro";
import { isSupportedLanguage } from "@utils/i18n-utils";
import { profileConfig, siteConfig } from "../../config";
import I18nKey from "../../i18n/i18nKey";
import { i18n } from "../../i18n/translation";
import MainGridLayout from "../../layouts/MainGridLayout.astro";

export async function getStaticPaths() {
	const supportedLangs = siteConfig.supportedLangs || ["en"];
	const defaultLang = siteConfig.defaultLang || siteConfig.lang || "zh_cn";

	return supportedLangs
		.filter((lang) => lang !== defaultLang) // 默认语言使用根路径
		.map((lang) => ({
			params: { lang },
			props: { lang },
		}));
}

const { lang } = Astro.props;
const { lang: langParam } = Astro.params;

// 验证语言参数
if (!isSupportedLanguage(langParam)) {
	return Astro.redirect("/404");
}

// 获取对应语言的about内容
let aboutPost: CollectionEntry<"spec"> | undefined;
try {
	// 首先尝试获取对应语言的about文件 (文件名格式: about_en.md -> id: about_en)
	aboutPost = await getEntry("spec", `about_${langParam}`);
	// 如果没有找到，则使用默认的about文件
	if (!aboutPost) {
		aboutPost = await getEntry("spec", "about");
	}
} catch (error) {
	// 如果都没有找到，使用默认的about文件
	try {
		aboutPost = await getEntry("spec", "about");
	} catch (fallbackError) {
		console.error("Failed to load about content:", fallbackError);
	}
}

const Content = aboutPost ? (await render(aboutPost)).Content : undefined;
---

<MainGridLayout title={i18n(I18nKey.about, langParam)} description={i18n(I18nKey.about, langParam)} lang={langParam}>
    <div class="flex w-full overflow-hidden relative min-h-32">
        <div class="card-base z-10 px-9 py-6 relative w-full ">
            <Markdown class="mt-2">
                {Content && <Content />}
            </Markdown>
            
            <!-- GitHub 统计部分 -->
            <div class="mt-8">
                <h2 class="text-2xl font-bold mb-6 text-90">{i18n(I18nKey.githubStats, langParam)}</h2>
                <GitHubStats client:load lang={langParam} />
            </div>
        </div>
    </div>
</MainGridLayout>
